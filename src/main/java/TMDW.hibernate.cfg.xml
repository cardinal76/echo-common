<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    	<mapping>
    		<sql-type jdbc-type="BIGINT" hibernate-type="java.lang.Long" />
    	</mapping>
    	<property name="hibernate.default_schema">tmdw</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.password">echo</property>
        <property name="hibernate.connection.url">jdbc:postgresql://dev.neclab.it:5432/echodb</property>
        <property name="hibernate.connection.username">echo</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
    </session-factory>
</hibernate-configuration>
